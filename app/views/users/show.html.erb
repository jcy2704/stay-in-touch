<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <% if @user != current_user %>
    <% if !@friendships.nil? %>
      <% if @friendships.status == false %>
        <%= label_tag "Pending" %>
      <% end %>
    <% else %>
      <%= button_to "Invite", friendships_path(user_id: current_user.id, friend_id: @user.id) %>
    <% end %>
  <%end%>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
